  margin-top: 30px;
}
.question{
  text-align: left;
  font-weight: bold;
  font-size: 35px;
  margin-bottom: 10px;
}
.options{
  text-align: left;
  font-weight: bold;
  font-size: 25px;
  color: #C6134E;
}
#prev, #next{
  font-weight: bold;
  font-size: 20px;
