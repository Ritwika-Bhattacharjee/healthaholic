<body>

<script>
  var batchno = 1;
  var id="";

$(document).ready(function(){
  $("#next").click(function(){
  id = "#question"+batchno;
  $(id).css("display", "none");
    batchno= batchno+1;
    id = "#question"+batchno;
    $(id).css("display", "block");
  });

  $("#prev").click(function(){
  id = "#question"+batchno;
  $(id).css("display", "none");
    batchno= batchno-1;
    id = "#question"+batchno;
    $(id).css("display", "block");
  });

  $("#start").click(function(){
    $(".quizbody").css("display", "block");
    $("#startdiv").css("display", "none");
  });
});


</script>

